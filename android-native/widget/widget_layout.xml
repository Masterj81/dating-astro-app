<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Sun Sign Emoji -->
        <TextView
            android:id="@+id/sun_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™ˆ"
            android:textSize="32sp"
            android:layout_marginEnd="8dp" />

        <!-- Sun Sign Name -->
        <TextView
            android:id="@+id/sun_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aries"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Moon Phase -->
        <TextView
            android:id="@+id/moon_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ•"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Daily Message -->
    <TextView
        android:id="@+id/daily_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your cosmic journey awaits..."
        android:textColor="#EAEAEA"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Stats Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Lucky Number -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lucky_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#A855F7"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Energy -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/energy_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textColor="#EC4899"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
