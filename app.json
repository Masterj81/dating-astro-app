{
  "expo": {
    "name": "AstroDating",
    "slug": "astro-dating",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "astrodating",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.astrodating.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSSiriUsageDescription": "AstroDating uses Siri to check your horoscope and view matches.",
        "NSUserActivityTypes": [
          "CheckHoroscopeIntent",
          "ViewMatchesIntent",
          "CheckCompatibilityIntent"
        ]
      },
      "entitlements": {
        "com.apple.security.application-groups": ["group.com.astrodating.app"],
        "com.apple.developer.siri": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0f0f1a",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.astrodating.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@bacons/apple-targets",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f0f1a"
        }
      ],
      "expo-localization",
      "expo-apple-authentication",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "astro-dating",
          "organization": "personnal-5l"
        }
      ],
      "expo-secure-store",
      "react-native-shared-group-preferences"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4b9ba994-e045-4aad-b3be-edee8bc22e2b"
      }
    }
  }
}
